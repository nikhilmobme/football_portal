<div class="container-main">
  <section class="content contentbackground">
    <div class="row tableview">
      <div class="box box-primary" >
        <div class="box-header with-border">
          <h3 class="text-center">Fix New Match</h3>
        </div>
        <%=form_for @match, url: fix_match_path,method: :post do |f| %>
          <div class="playerContainer">
            <div class="form-group">
              <%= f.label :venue %><br>
              <%=f.text_field(:venue, {:class=>'form-control'}) %>
            </div>
            <div class="form-group">
              <%= f.label :date %><br>
              <%=f.text_field(:date, {:class=>'form-control'}) %>
            </div>
            <div class="form-group">
              <%= f.label :FirstTeam %><br>
              <select name="team1_id" class="form-control">
                <% @team.each do|team| %>
                  <option id=<%=team.id%> value=<%=team.id%>> <%=team.name%>
                  </option>
                <%end%>
              </select>
            </div>
            <div class="form-group">
              <%= f.label :Second_team %><br>
              <select name="team2_id" class="form-control">
                <% @team.each do|team| %>
                  <option id=<%=team.id%> value=<%=team.id%>> <%=team.name%>
                  </option>
                <%end%>

              </select>
            </div>
            <div class="submit-form">
              <%=f.submit({:class=>"btn btn-success"})%>
            </div>
          </div>
          </div>           
        <%end%> 
      </div>
    </div>
  </section>
</div>
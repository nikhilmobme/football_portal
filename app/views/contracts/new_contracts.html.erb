<div class="container-main">
  <h1 class="team-name"><%=@team.name%></h1>
  <h3>Current team members</h3>
  <%if @player_array.nil? %>
    <h4>No players yet...you can add 7 players</h4>
  <% else %>
    <%bal_players=7-@player_array.length%>
    <% @player_array.each do |id , name| %>
      <h4> <%=name%></h4>
    <%end%>
    <h4><%="you can add #{bal_players} more players..."%></h4>
  <%end%>
  <h3>Choose players</h3>
  <%= form_tag( { :action => 'add_players' } ) do %>
    <input type="hidden" name="bal_players" value=<%=bal_players%> id=<%=bal_players%>/>
    <input type="hidden" name="team_id" value=<%=@team.id%> id=<%=@team_id%>/>
    <% @add_players.each do |player| %>
      <div class="">
        <input type="checkbox" class="r1" name="player_id[]" value=<%=player.id%> id=<%=player.id%>/> <%=player.name%>
      </div>
    <%end%>
    <%= submit_tag 'Add' %>
  <%end%>
</div>